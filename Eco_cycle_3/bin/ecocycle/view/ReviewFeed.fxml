<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" styleClass="root" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecocycle.controller.ReviewFeedController">
    <top>
      <HBox alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Global Review Feed (Newest First)" styleClass="header-label">
               <padding>
                  <Insets bottom="20" top="20" />
               </padding>
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" styleClass="logo-image">
               <image>
                  <Image url="@images/logo.png" />
               </image>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
    </top>
    <center>
        <TableView fx:id="reviewTable">
            <columns>
                <TableColumn fx:id="productNameCol" prefWidth="150.0" text="Product" />
                <TableColumn fx:id="sellerNameCol" prefWidth="125.0" text="Seller" />
                <TableColumn fx:id="buyerNameCol" prefWidth="125.0" text="Buyer" />
                <TableColumn fx:id="ratingCol" prefWidth="75.0" text="Rating" />
                <TableColumn fx:id="reviewCol" prefWidth="300.0" text="Review" />
            </columns>
            <BorderPane.margin>
                <Insets left="20" right="20" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="75.0">
            <Button onAction="#handleBack" prefWidth="150.0" text="Back to Dashboard" />
        </VBox>
    </bottom>
</BorderPane>