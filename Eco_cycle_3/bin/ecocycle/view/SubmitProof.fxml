<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="700.0" styleClass="root" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecocycle.controller.SubmitProofController">
    <top>
      <HBox alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Submit Recycling Proof" styleClass="header-label">
               <padding>
                  <Insets bottom="20" top="20" />
               </padding>
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" styleClass="logo-image">
               <image>
                  <Image url="@images/logo.png" />
               </image>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
    </top>
    <center>
        <VBox spacing="10.0">
            <children>
                <Label text="These are products you have successfully bid on and purchased." />
                <TableView fx:id="acquiredTable" prefHeight="250.0">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="100.0" text="Product ID" />
                        <TableColumn fx:id="nameCol" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="categoryCol" prefWidth="150.0" text="Category" />
                        <TableColumn fx:id="statusCol" prefWidth="180.0" text="Status" />
                    </columns>
                </TableView>
                
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                   <children>
                      <Label text="Upload your recycling proof (image or PDF):" />
                      <Button fx:id="uploadProofBtn" onAction="#handleUploadProof" text="Choose File" />
                   </children>
                   <VBox.margin>
                      <Insets top="10.0" />
                   </VBox.margin>
                </HBox>
                <Label fx:id="proofStatus" textFill="GREEN" />
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button onAction="#handleSubmitProof" styleClass="primary-button" text="Submit Proof for Selected" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
                <Label fx:id="infoLabel" alignment="CENTER" contentDisplay="CENTER" prefWidth="660.0" styleClass="error-label" />
            </children>
            <BorderPane.margin>
                <Insets left="20.0" right="20.0" />
            </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="75.0" BorderPane.alignment="CENTER">
            <Button onAction="#handleBack" prefWidth="150.0" text="Back to Dashboard" />
        </VBox>
    </bottom>
</BorderPane>