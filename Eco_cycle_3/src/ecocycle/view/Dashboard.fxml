               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="statsLabel" text="Credits: 0.0 | Total Sales: â‚¹0.00" />
        </VBox>
    </top>
    <center>
        <VBox fx:id="buttonContainer" alignment="CENTER" spacing="15.0" />
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
             <padding>
                <Insets bottom="20" />
            </padding>
            <Button onAction="#handleLeaderboards" prefWidth="200.0" text="View Leaderboards" />
            <Button onAction="#handleLogout" prefWidth="150.0" text="Logout" textFill="RED" />
        </VBox>
    </bottom>
