<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecocycle.controller.ManageRecyclingController">
    <top>
        <Label text="Manage Recycling Approvals" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
        </Label>
    </top>
    <center>
      <VBox spacing="10.0">
         <children>
              <Label text="The following products are past their sale date and eligible for recycling." />
              <TableView fx:id="eligibleTable" prefHeight="300.0">
                  <columns>
                      <TableColumn fx:id="nameCol" prefWidth="150.0" text="Name" />
                      <TableColumn fx:id="categoryCol" prefWidth="100.0" text="Category" />
                      <TableColumn fx:id="priceCol" prefWidth="100.0" text="Price (â‚¹)" />
                  </columns>
              </TableView>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button onAction="#handleApprove" text="Approve Selected for Recycling" />
                  <Button onAction="#handleDeny" text="Deny Recycling for Selected" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="infoLabel" />
         </children>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
      </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="75.0" BorderPane.alignment="CENTER">
            <Button onAction="#handleBack" prefWidth="150.0" text="Back to Dashboard" />
        </VBox>
    </bottom>
</BorderPane>